{
  "name": "@avanio/logger-like",
  "version": "0.2.0",
  "description": "Logger like interface and tools",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --minify --sourcemap --format cjs,esm --dts --clean",
    "test": "c8 mocha",
    "coverage": "c8 report --reporter=lcovonly",
    "lint": "eslint src test",
    "validate": "tsc --noEmit --project tsconfig.test.json",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "repository": "github:mharj/logger-like",
  "mocha": {
    "exit": true,
    "extension": [
      "ts",
      "js"
    ],
    "recursive": true,
    "enable-source-maps": true,
    "require": [
      "ts-node/register"
    ],
    "loader": "ts-node/esm",
    "reporters": [
      "spec",
      "mocha-junit-reporter"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "extension": [
      ".ts",
      ".js"
    ]
  },
  "keywords": [
    "logger"
  ],
  "author": "mharj",
  "license": "MIT",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.8.0",
    "@stylistic/eslint-plugin-ts": "^2.8.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "^20.16.10",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "c8": "^10.1.2",
    "chai": "^5.1.1 ",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2"
  }
}
